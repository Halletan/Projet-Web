@model SpaceAdventures.MVC.Models.UserDto

@{
    ViewData["Title"] = "DeleteUser";
}

<br/><br/><br/>

<<div id="myHeader" class="text-center mt-5 pt-5 text-white">
    <h1 class="display-4">Space Adventures</h1>
    <h2>Delete a user</h2>
</div>

<h3 class="text-white mt-5">Are you sure you want to delete this?</h3>



<div class="mt-5" >
    
    <dl class="row border rounded px-2 " style="background-color:rgba(255,255,255,0.5)">
        <dt class = "col-sm-2 d-none">
            @Html.DisplayNameFor(model => model.IdUser)
        </dt>
        <dd class = "col-sm-10 d-none">
            @Html.DisplayFor(model => model.IdUser)
        </dd>
        <dt class = "col-sm-2 text-white">
            @Html.DisplayNameFor(model => model.Username)
        </dt>
        <dd class = "col-sm-10 text-white">
            @Html.DisplayFor(model => model.Username)
        </dd>
        <dt class = "col-sm-2 text-white">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10 text-white">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2 d-none">
            @Html.DisplayNameFor(model => model.VerifiedEmail)
        </dt>
        <dd class = "col-sm-10  d-none">
            @Html.DisplayFor(model => model.VerifiedEmail)
        </dd>
        <dt class = "col-sm-2 text-white">
            @Html.DisplayNameFor(model => model.IdRole)
        </dt>
        <dd class = "col-sm-10 text-white">
            @Html.DisplayFor(model => model.RoleName)
        </dd>
    </dl>
    
    <form asp-action="DeleteUser" asp-route-id=@Model.IdUser  class="text-end">
        <input type="submit" value="Delete" class="btn btn-outline-danger" />  <a class="btn btn-outline-info m-3" asp-action="GetAllUsers">Back to List</a>
    </form>
</div>
