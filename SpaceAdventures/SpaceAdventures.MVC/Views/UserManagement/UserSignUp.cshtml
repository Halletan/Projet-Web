@model SpaceAdventures.MVC.Models.UserInput

@{
    ViewData["Title"] = "UserSignUp";
}

<h1>UserSignUp</h1>

<h4>UserInput</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UserSignUp">
           <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="Lastname" class="control-label text-white"></label>
                <input asp-for="Lastname" class="form-control" />
                <span asp-validation-for="Lastname" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Firstname" class="control-label text-white"></label>
                <input asp-for="Firstname" class="form-control" />
                <span asp-validation-for="Firstname" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Username" class="control-label text-white"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Email" class="control-label text-white"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group" hidden="hidden">
                <label asp-for="Connection" class="control-label text-white"></label>
                <input asp-for="Connection"  value="test" class="form-control" readonly="readonly"/>
                <span asp-validation-for="Connection" class="text-danger"></span>
            </div>
             <div class="form-group" hidden="hidden">
                <label asp-for="Password" class="control-labelvtext-white"></label>
                <input asp-for="Password"  value="test" class="form-control" readonly="readonly" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
             <div class="form-group mb-2 d-none">
                <label asp-for="IdRole" class="control-label text-white"></label>
                 <input asp-for="IdRole"  value="4" class="form-control" readonly="readonly" />
                <span asp-validation-for="IdRole" class="text-danger"></span>
            </div>
            
            <div class="form-group m-2">
                <input type="submit" value="Create" class="btn btn-success" /> | <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Back to Home page</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
