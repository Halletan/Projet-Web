@using SpaceAdventures.MVC.Models.Enums
@model Airports

@{
    ViewData["Title"] = "GetAirports";
}

<link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet"/>

<br/><br/>

<div id="myHeader" class="text-center mt-5 pt-5 text-white">
    <h2>Airports</h2>
</div>



@if (ViewContext.HttpContext.Session.GetString("Role") == RolesType.Agent.ToString())
{
    <p><a class="btn btn-outline-info btn-sm disabled" asp-action=""> <i class="fa-solid fa-plus"></i> Add New Airport</a></p>
}
else
{
    <p><a class="btn btn-outline-info btn-sm" asp-action=""> <i class="fa-solid fa-plus"></i> Add New Airport</a></p>
}


<table id="datatable" class="table border rounded">
    <thead class="dataTableColumn">
    <tr>
        <th>Airport ID</th>
        <th>Name</th>
        <th>Planet ID</th>

        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.AirportsList)
    {
        <tr class="dataTableColumn">
            <td>
                @Html.DisplayFor(modelItem => item.IdAirport)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPlanet)
            </td>
    @if (ViewContext.HttpContext.Session.GetString("Role") == RolesType.Agent.ToString())
    {
        <td>
            <a class="btn btn-dark btn-sm disabled" asp-route-id="@item.IdAirport"><i class="fa-solid fa-pen m-2"></i></a> |
            <a class="btn btn-danger btn-sm disabled" asp-route-id="@item.IdAirport"><i class="fa-solid fa-trash m-2"></i></a>
        </td>
    }
    else
    {
        <td>
            <a class="btn btn-dark btn-sm" asp-route-id="@item.IdAirport"><i class="fa-solid fa-pen m-2"></i></a> |
            <a class="btn btn-danger btn-sm" asp-route-id="@item.IdAirport"><i class="fa-solid fa-trash m-2"></i></a>
        </td>
    }
        </tr>
    }
    </tbody>
</table>


@section Scripts
{
    <script src ="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src ="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script src ="~/js/datatable.js"></script>
}